   <fieldset>
    <h1>Add a New Genre</h1>
    <form id="addGenre" action="/genres" method="post">
        <label for="genre_name">Genre Name:</label>
        <input type="text" id="genre_name" name="genre_name">
        <button>Submit</button>
    </form>
  </fieldset>
  <br>
  <br>
  <fieldset>
      <h1>All Genres</h1>
      <table>
          <thead>
              <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
              {{#each genres}}
              <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                    <td>
                        <button type="button" name="edit_genre">Edit</button>
                        <button type="button" name="delete_genre" onclick="deleteGenre({{id}})">Delete</button>
                    </td>
              </tr>
              {{/each}}
          </tbody>
      </table>
  </fieldset>