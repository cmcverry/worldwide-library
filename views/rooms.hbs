    <fieldset>
        <h1>Create a New Room</h1>
        <form id="addRoom" action="/rooms" method="post">
            <label for="room_num">Room Number:</label>
            <input type="number" id="room_num" name="room_num">
            <label for="capacity">Capacity:</label>
            <input type="number" id="capacity" name="capacity">
            <button>Submit</button>
        </form>
    </fieldset>
    <br>
    <br>
    <fieldset>
        <h1>All Rooms</h1>
        <table>
            <thead>
                <tr>
                    <th>Room Number</th>
                    <th>Capacity</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {{#each rooms}}
                <tr>
                    <td>{{roomNumber}}</td>
                    <td>{{capacity}}</td>
                    <td>
                        <button type="button" name="edit_room">Edit</button>
                        <button type="button" name="delete_room" onclick="deleteRoom({{roomNumber}})">Delete</button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </fieldset>